{
  "name": "caroles-reef-2d",
  "version": "0.0.7b",
  "description": "A relaxing virtual aquarium where you can breed and care for beautiful tropical fish",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "prepare:ci": "npm install --no-package-lock --no-save"
  },
  "keywords": [
    "aquarium",
    "simulation",
    "game",
    "typescript",
    "canvas"
  ],
  "author": "David Slimp",
  "license": "AGPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/david-slimp/caroles-reef-2d.git"
  },
  "bugs": {
    "url": "https://github.com/david-slimp/caroles-reef-2d/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "howler": "^2.2.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/howler": "^2.2.12",
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^9.0.10",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^35.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "directories": {
    "doc": "docs"
  }
}
